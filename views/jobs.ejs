<%- include('partials/head') %>
<%- include('partials/header') %>

<h1>Your Jobs</h1>

<% if (jobs.length === 0) { %>
  <p>You have no jobs.</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.position %></td>
          <td><%= job.description %></td>
          <td>
            <a href="/jobs/edit/<%= job._id %>">Edit</a> |
            <form method="POST" action="/jobs/delete/<%= job._id %>" style="display:inline;">
              <input type="hidden" name="_csrf" value="<%= _csrf %>">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>

<a href="/jobs/new">Add a New Job</a>

<%- include('partials/footer') %>